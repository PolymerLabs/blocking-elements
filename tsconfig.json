{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,

    "lib": [
      "dom",
      "esnext"
    ],

    "declaration": true,
    "sourceMap": true,
    "pretty": true
  },

  "include": [
    "*.ts"
  ]
}
